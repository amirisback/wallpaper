<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_big_16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base url :"
            android:textAllCaps="true"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/tv_base_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium_8dp"
            android:layout_marginBottom="@dimen/dimen_big_16dp"
            tools:text="www.frogobox.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big_16dp"
            android:text="Link Image :"
            android:textAllCaps="true"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:id="@+id/tv_source_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium_8dp"
            android:layout_marginBottom="@dimen/dimen_big_16dp"
            tools:text="www.frogobox.com" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_big_16dp"
            android:text="Important Info :"
            android:textAllCaps="true"
            android:textColor="@color/colorTextBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_medium_8dp"
            android:text="@string/text_copyright" />
    </LinearLayout>

    <include layout="@layout/ads_phone_tab_special_smart_banner" />

</RelativeLayout>